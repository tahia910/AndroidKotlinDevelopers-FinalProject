<resources>
    <!-- Base application theme. -->
    <style name="Theme.NextReminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Both text colors respects the accessibility requirements of background/foreground
             contrast radio, including in dark theme (secondary text colors are around 10:1)-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <!-- Enable window content transitions for shared element transition -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@drawable/background_bottom_line</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="android:textColor">@color/selector_chip_text</item>
    </style>
</resources>