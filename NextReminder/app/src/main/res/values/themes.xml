<resources>
    <!-- Base application theme. -->
    <style name="Theme.NextReminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Both text colors respects the accessibility requirements of background/foreground
             contrast radio, including in dark theme (secondary text colors are around 10:1)-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>

        <item name="actionBarTheme">@style/AppBarStyle</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Filter</item>
        <!-- Enable window content transitions for shared element transition -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="LargeTitleStyle">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>

    <style name="BodyStyle">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="UrlButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/accessibility_min_height</item>
    </style>
</resources>